{
    "compilerOptions": {
        "target": "ES2024",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "downlevelIteration": true,
        "jsx": "react-jsx"
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "./**/*.js",
        "./**/*.mjs",
        "./**/*.cjs"
    ]
}